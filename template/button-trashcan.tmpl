{{- if not isRoot }}
	{{ if isLocked }}
		<img class="icon"
			src="/model/{{model}}/images/trash-can.svg"
			onclick="alert('Sorry, cannot delete device: device is locked')">
	{{ else }}
		<img class="icon"
			src="/model/{{model}}/images/trash-can.svg"
			hx-delete="/destroy?ChildId={{id}}"
			hx-confirm="Are you sure you wish to delete device {{name}}?">
	{{ end }}
{{- end }}
