<div class="flex flex-row mx-4 my-8"
	hx-get="/device/{{id}}/show-status-tab?tab=sessions"
	hx-trigger="every 1s"
	hx-target="this"
	hx-swap="outerHTML">
{{ template "device-status-tabs.tmpl" . }}
	<div class="flex flex-col">
		<h2>ACTIVE SESSIONS</h2>
{{ range $id, $session := .sessions }}
		<div class="bg-gray text-black m-1 p-4 rounded-3xl min-w-lg">
			<h3>Session ID: {{$id}}</h3>
			<p>Last Update: {{$session.Age}}</p>
			<h4>Last Views:</h4>
			<ul>
		{{range $deviceId, $view := $session.LastViews}}
				<li>{{$deviceId}}: {{$view.View}}, {{$view.Level}}</li>
		{{end}}
			</ul>
		</div>
{{ end }}
	</div>
</div>
