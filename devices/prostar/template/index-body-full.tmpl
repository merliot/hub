<style>
	table {
		width: 100%;
		border-collapse: collapse;
	}
	th {
		color: #737373;
		text-align: center;
		font-weight: normal;
		padding-bottom: 10px;
	}
	tr:nth-child(even) {
		background-color: #f2f2f2;
	}
	td {
		padding: 8px;
		text-align: left;
		color: #737373;
		font-weight: bold;
	}
	td:nth-child(2) {
		white-space: nowrap;
		text-align: right;
		color: black;
		font-weight: normal;
	}
	.pic {
		width: 50px;
		height: 50px;
		margin-right: 20px;
	}
	.panel {
		align-items: center;
	}
	#modbus-status {
		justify-content: center;
		align-items: center;
	}
</style>

<div class="divFlexRow hidden" id="modbus-status">
	<img src="images/modbus-disconnected.png"></img>
	<span id="modbus-error"></span>
</div>

<div class="divFlexRow panel">
	<img class="pic" src="images/charge-icon.png"></img>
	<table>
		<tr>
			<th colspan="2">CHARGE SUMMARY</th>
		</tr>
		<tr>
			<td>Array Voltage</td>
			<td><span id="array-voltage"></span> V</td>
		</tr>
		<tr>
			<td>Charge Power</td>
			<td><span id="charge-power"></span> W</td>
		</tr>
		<tr>
			<td>Daily System Charge</td>
			<td><span id="daily-system-charge"></span> Ah</td>
		</tr>
		<tr>
			<td>Charge State</td>
			<td><span id="charge-state"></span></td>
		</tr>
	</table>
</div>

<div class="divFlexRow panel">
	<img class="pic" src="images/battery-icon.png"></img>
	<table>
		<tr>
			<th colspan="2">BATTERY SUMMARY</th>
		</tr>
		<tr>
			<td>Net Battery Current</td>
			<td><span id="net-battery-current"></span> A</td>
		</tr>
		<tr>
			<td>Battery Terminal Voltage</td>
			<td><span id="battery-terminal-voltage"></span> V</td>
		</tr>
	</table>
</div>

<div class="divFlexRow panel">
	<img class="pic" src="images/load-icon.png"></img>
	<table>
		<tr>
			<th colspan="2">LOAD SUMMARY</th>
		</tr>
		<tr>
			<td>Load Voltage</td>
			<td><span id="load-voltage"></span> V</td>
		</tr>
		<tr>
			<td>Load Current</td>
			<td><span id="load-current"></span> A</td>
		</tr>
		<tr>
			<td>Daily Load</td>
			<td><span id="daily-load"></span> Ah</td>
		</tr>
		<tr>
			<td>Load State</td>
			<td><span id="load-state"></span></td>
		</tr>
	</table>
</div>
